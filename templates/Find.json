{
  "type": "bubble",
  "header": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "#{{user.id}}",
        "weight": "bold",
        "size": "lg",
        "align": "center"
      }
    ]
  },
  "hero": {
    "type": "image",
    "url": "{{picture}}",
    "size": "full",
    "aspectRatio": "1:1",
    "aspectMode": "cover"
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{user.name}}",
        "weight": "bold",
        "size": "xl",
        "contents": [
          {
            "type": "span",
            "text": "{{user.name}}   ",
            "weight": "bold"
          },
          {
            "type": "span",
            "text": "       {{user.job}}",
            "size": "sm",
            "weight": "regular",
            "style": "normal"
          }
        ]
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": "#{{user.tag1}} #{{user.tag2}} #{{user.tag3}}",
            "size": "sm"
          }
        ],
        "margin": "sm"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": " {{user.intro}}",
            "size": "sm",
            "wrap": true
          }
        ],
        "margin": "md"
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "horizontal",
    "contents": [
      {
        "type": "button",
        "action": {
          "type": "uri",
          "label": "網站",
          "uri": "{{user.link}}"
        },
        "style": "primary"
      },
      {
        "type": "button",
        "action": {
          "type": "uri",
          "label": "留言給他",
          "uri": "{{comment}}?id={{user.id}}"
        },
        "style": "primary",
        "color": "#555555"
      }
    ],
    "spacing": "lg"
  }
}


